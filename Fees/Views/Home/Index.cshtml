@model List<BlockFee>
@{
    ViewData["Title"] = "Home Page";
    var satoshiToBtnDivider = 100000000;
}

<style>
    .fee-card .card {
        border-radius: 20px;
    }

    .fee-card p {
        margin-bottom: 0px;
    }

    .fee-card label {
        margin: 0;
    }

    .fee-card label {
        margin-bottom: 5px;
        font-size: 14px;
    }
    .fee-card span {
        padding-left:8px;
        padding-right:8px;
        color: white;
        border-radius: 20px;
        background: #6c757d;
    }
</style>
<div class="bg-main" style="direction: rtl;">
    
    <div class="container pt-5 pb-1">
        <div class="text-center">
            <h1 class="display-4 text-white"> עמלות העברה בביטקוין</h1>
            <h5 class="text-white mb-0" style="font-weight: 300;"> עמלות מומלצות לכניסת הטרנזקציה לבלוקצ'יין</h5>

            <div class="row no-gutters fee-card d-flex justify-content-center mt-5 mb-3">
                
                <div class="col-10 col-lg-3 p-2">
                    <div class="card p-2 text-center shadow-lg">
                        <p>@Model[0].NumBlock בלוקים ~20 דקות </p>
                        <label>Satoshi Per byte: @(Model[0].SatoshiPerByte * 100000)</label>
                        <label class=""><span>@( @Model[0].Btc)</span>&emsp;<i class="fab fa-bitcoin"></i></label>
                        <label class=""><span>@( @Model[0].Dollar)</span>&emsp;<i class="fas fa-dollar-sign"></i></label>
                        <label class=""><span>@( @Model[0].Nis)</span>&emsp;<i class="fas fa-shekel-sign"></i></label>
                    </div>
                </div>

                <div class="col-10 col-lg-3 p-2">
                    <div class="card p-2 text-center ">
                        <div class="d-flex justify-content-center">
                            <p>@Model[1].NumBlock בלוקים ~שעה </p>
                        </div>
                        <label>Satoshi Per byte: @(Model[1].SatoshiPerByte * 100000)</label>
                        <label class=""><span>@( @Model[1].Btc)</span>&emsp;<i class="fab fa-bitcoin"></i></label>
                        <label class=""><span>@( @Model[1].Dollar)</span>&emsp;<i class="fas fa-dollar-sign"></i></label>
                        <label class=""><span>@( @Model[1].Nis)</span>&emsp;<i class="fas fa-shekel-sign"></i></label>
                    </div>
                </div>
                <div class="col-10 col-lg-3 p-2">
                    <div class="card p-2 text-center ">
                        <p>@Model[2].NumBlock בלוקים ~8 שעות </p>
                        <label>Satoshi Per byte: @(Model[2].SatoshiPerByte * 100000)</label>
                        <label class=""><span>@( @Model[2].Btc)</span>&emsp;<i class="fab fa-bitcoin"></i></label>
                        <label class=""><span>@( @Model[2].Dollar)</span>&emsp;<i class="fas fa-dollar-sign"></i></label>
                        <label class=""><span>@(  @Model[2].Nis)</span>&emsp;<i class="fas fa-shekel-sign"></i></label>
                    </div>
                </div>
            </div>

            <p class="text-white font-italic" style="font-size: 14px;">*העמלות המופיעות למעלה הינן לטרנזקציה בעלת 1 קלט 2 פלט</p>

        </div>
   

    </div>

</div>
<svg viewBox="0 0 500 150" preserveAspectRatio="none" style="height: 150px; width: 100%;">
    <path d="M0.00,92.27 C216.83,192.92 304.30,8.39 500.00,109.03 L500.00,0.00 L0.00,0.00 Z" style="stroke: none;fill: #f7931a;"></path>
</svg>

<div class="bg-white" style="height: 200px;margin-top: -73px;">
    <div class="row d-flex justify-content-center">
        <button class="btn bg-white color-main border-main p-3">הגדרות מתקדמות</button>
    </div>
</div>
